<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Project_programming.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Project_programming"
    Shell.FlyoutBehavior="Disabled">
    
    
    <FlyoutItem FlyoutDisplayOptions="AsSingleItem">
        <ShellContent
        Title="Family Planner"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" 
        />
        <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:RegistrationPage}"
        Route="LoginPage" />
        <ShellContent
        Title="Forget password ?"
        ContentTemplate="{DataTemplate local:ForgottenPasswordPage}"
        Route="ForgottenPasswordPage" />

    </FlyoutItem>



</Shell>
