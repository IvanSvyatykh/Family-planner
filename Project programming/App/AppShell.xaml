<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Project_programming.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Project_programming"
    xmlns:account="clr-namespace:AccountViewModel"  
    xmlns:acountView="clr-namespace:Project_programming.Account"
    Shell.FlyoutBehavior="Locked"
    FlyoutVerticalScrollMode="Auto"  
     >
    
    <Shell.BindingContext>
        <account:AccountPageViewModel/>
    </Shell.BindingContext>

    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid ColumnDefinitions="50,*" Padding="15">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">

                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="White"/>

                                </VisualState.Setters>
                            </VisualState>

                            <VisualState x:Name="Selected">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="Grey"/>

                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </VisualStateManager.VisualStateGroups>
                <Image Source="{Binding Icon}" WidthRequest="25"/>

                <Label Grid.Column="1" Text="{Binding Title}" />
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

    <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Shell.FlyoutBehavior="Disabled"/>
    <ShellContent ContentTemplate="{DataTemplate local:ForgottenPasswordPage}" Shell.FlyoutBehavior="Disabled"/>
    <ShellContent ContentTemplate="{DataTemplate local:RegistrationPage}" Shell.FlyoutBehavior="Disabled"/>
    
    <FlyoutItem  IsVisible="{Binding IsAccountPage}" IsEnabled="{Binding IsAccountPage}" Title="Account Page" Icon="account.png">
        <Tab Title="Account Page">
            <ShellContent Title="Account Page" ContentTemplate="{DataTemplate acountView:AccountPageView}"/>
        </Tab>
    </FlyoutItem>
    
</Shell>
    
