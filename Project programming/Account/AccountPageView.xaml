<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project_programming.Account.AccountPageView"            
             Title="AccountPage"
             Shell.FlyoutBehavior="Locked"
            
             >
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <VerticalStackLayout Grid.Column="2" Spacing="15">
            <Button BackgroundColor="White"  WidthRequest="300" HeightRequest="50" Text="Statistics"/>
            <Button BackgroundColor="White"  WidthRequest="300" HeightRequest="50" Text="Add payment"/>
            <Button BackgroundColor="White"  WidthRequest="300" HeightRequest="50" Text="Settings"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>