<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AccountPage.AccountPageView"     
             Title="{Binding Name}"                 
             >
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>


    <ScrollView BackgroundColor="WhiteSmoke">
        <Grid RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <HorizontalStackLayout Grid.Row="0" Spacing="20">
                <StackLayout>
                    <Label Text="Email:"/>
                </StackLayout>
                <StackLayout>
                    <Label Text="{Binding Email}" WidthRequest="150"/>
                </StackLayout>
                <StackLayout>
                    <Label Text="Salary: "/>
                </StackLayout>
                <StackLayout>
                    <Entry Text="{Binding Salary}"/>
                </StackLayout>
                <StackLayout>
                    <Button Text="Save Salary Changes" Command="{Binding SaveChangesInSalary}"/>
                </StackLayout>
            </HorizontalStackLayout>
            <VerticalStackLayout Grid.Row="1">
                <HorizontalStackLayout>
                    <Label Text="{Binding FamilyName}"/>
                </HorizontalStackLayout>

                <CollectionView SelectionMode="Single" ItemsSource="{Binding FamilyMembers}" SelectedItem="{Binding SelectedMember}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <HorizontalStackLayout Spacing="15">
                                <Label Text="{Binding MemberName}"/>
                                <Label Text="{Binding MemberEmail}"/>
                                <Label Text="{Binding MemberSalary}"/>
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>


        </Grid>



    </ScrollView>
</ContentPage>