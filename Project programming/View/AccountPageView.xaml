<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:UraniumUI.Material.Controls;assembly=UraniumUI.Material"
             x:Class="AccountPage.AccountPageView"     
             Title="{Binding Name}"  
             
             BackgroundColor="Black"
             >
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>





    <VerticalStackLayout Spacing="20">

        <controls:DataGrid ItemsSource="{Binding Person}" UseAutoColumns="True"  HorizontalOptions="Center"/>
        
        <controls:DataGrid ItemsSource="{Binding FamilyMembers}" UseAutoColumns="True"  HorizontalOptions="Center"/>

    </VerticalStackLayout>

</ContentPage>